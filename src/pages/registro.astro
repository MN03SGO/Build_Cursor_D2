---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Registro - Asistente de Estudio">
  <div class="registro-wrap">
    <h1>Crear cuenta</h1>

    <form class="form-registro" id="form-registro">
    <div class="form-group">
      <label for="nombre">Nombre completo</label>
      <input type="text" id="nombre" name="nombre" required placeholder="Ej: Ana López" />
    </div>
    <div class="form-group">
      <label for="email">Correo</label>
      <input type="email" id="email" name="email" required placeholder="correo@ejemplo.com" />
    </div>
    <div class="form-group">
      <label for="password">Contraseña</label>
      <input type="password" id="password" name="password" required />
    </div>
    <button type="submit" class="btn btn-primary btn-submit">Crear cuenta</button>
    <p class="form-status" id="form-status" aria-live="polite"></p>
    </form>

    <p class="form-link"><a href="/" class="link-dashboard">← Volver al inicio</a></p>
  </div>
</Layout>

<style>
  .registro-wrap {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .registro-wrap h1 {
    text-align: center;
    width: 100%;
  }

  .form-registro {
    width: 100%;
    max-width: 420px;
    background: var(--card);
    padding: clamp(1.25rem, 4vw, 2rem);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
  }

  .btn-submit {
    width: 100%;
    margin-top: 0.5rem;
  }

  .form-note {
    margin-top: 1.5rem;
    color: var(--text-muted);
    font-size: 0.9rem;
    text-align: center;
    width: 100%;
  }

  .form-status {
    margin: 0.75rem 0 0;
    color: var(--text-muted);
    min-height: 1.2rem;
  }

  .form-link {
    margin-top: 1rem;
    text-align: center;
    width: 100%;
  }

  .link-dashboard {
    color: var(--accent);
    font-weight: 600;
    text-decoration: none;
  }

  .link-dashboard:hover {
    text-decoration: underline;
  }

  @media (max-width: 479px) {
    .form-registro {
      padding: 1.25rem;
    }
  }
</style>

<script>
  document.getElementById('form-registro')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const nombre = (form.nombre as HTMLInputElement).value.trim();
    const email = (form.email as HTMLInputElement).value.trim();
    const password = (form.password as HTMLInputElement).value;
    const statusEl = document.getElementById('form-status');
    if (!nombre || !email || !password || !statusEl) return;

    statusEl.textContent = 'Creando cuenta...';

    fetch('/api/auth/register', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ nombre, email, password })
    })
      .then(async (res) => {
        if (!res.ok) {
          throw new Error(await res.text());
        }
        return res.json();
      })
      .then((data) => {
        localStorage.setItem('userSession', JSON.stringify(data));
        window.location.href = '/dashboard';
      })
      .catch((err) => {
        statusEl.textContent = err?.message || 'No se pudo crear la cuenta.';
      });
  });
</script>
