---
import Layout from '../layouts/Layout.astro';
import MateriaCard from '../components/MateriaCard.astro';
import PlanDia from '../components/PlanDia.astro';
import { materiasMock, planDiaMock } from '../data/mock';
---
<Layout title="Dashboard - Asistente de Estudio">
  <h1>Dashboard</h1>
  <p class="dashboard-intro">Materias registradas y plan de estudio del d√≠a. Marca las tareas cuando las completes.</p>

  <section class="materias-section">
    <h2 class="section-title">Materias registradas</h2>
    <div class="materias-grid">
      {materiasMock.map((m) => (
        <MateriaCard
          nombre={m.nombre}
          fechaExamen={m.fechaExamen}
          prioridad={m.prioridad}
        />
      ))}
    </div>
  </section>

  <section class="plan-section">
    <PlanDia tareas={planDiaMock} />
  </section>
</Layout>

<style>
  .materias-section {
    margin-bottom: 2.5rem;
  }
  .materias-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1.25rem;
  }
  .plan-section {
    margin-top: 2rem;
  }
  .dashboard-intro {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }
</style>
